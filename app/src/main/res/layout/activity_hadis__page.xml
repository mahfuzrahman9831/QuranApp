<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hadis_Page">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/laybottomId2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-27dp"
        android:layout_marginBottom="27dp">

    <LinearLayout
        android:background="#F1D9D9"
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hadis_page_header1"
            android:gravity="center"
            android:textSize="30sp"
            android:fontFamily="@font/al_qalam_regular"
            />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hadis_page_header2"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/kalpurush"
            android:layout_marginBottom="15dp"
            />

        <ImageView
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/hadis_image"
            />

    </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/laybottomId2"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#140FA8"
        android:weightSum="4">

        <ImageView
            android:id="@+id/imageViewId_1"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/book_icon"
            />

        <ImageView
            android:id="@+id/imageViewId_2"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/doa_icon" />

        <ImageView
            android:id="@+id/imageViewId_3"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hadis_icon"
            />

        <ImageView
            android:id="@+id/imageViewId_4"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/amol_icon"
            />

    </LinearLayout>



</RelativeLayout>