<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1D9D9"
    tools:context=".ayatul_kursi_page">


    <LinearLayout
        android:padding="10dp"
        android:background="#6300BCD4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/aaa"
            android:layout_marginBottom="30dp"
            />

        <LinearLayout
            android:background="#D0F7F8F8"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingLeft="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/kalpurush"
                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="আয়াতুল কুরসী:"
                />

            <TextView
                android:fontFamily="@font/al_qalam_regular"
                android:layout_marginTop="5dp"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ayatul_kursi"/>

            <TextView
                android:paddingLeft="5dp"
                android:fontFamily="@font/kalpurush"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ayatul_kursi_uccaron"
                />

            <TextView
                android:paddingLeft="5dp"
                android:fontFamily="@font/kalpurush"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ayatul_kursi_ortho"
                />

        </LinearLayout>




    </LinearLayout>


</ScrollView>